# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Response {
  message: String!
}

type Env {
  DATABASE_URL: String
  DATABASE_NAME: String
  DATABASE_NAMESPACE: String
  DATABASE_USERNAME: String
  PORT: String
  JWT_TYPE: String
  JWT_SECRET: String
  CLIENT_ID: String
}

input UpdateEnvInput {
  JWT_TYPE: String
  JWT_SECRET: String
  CLIENT_ID: String
}

type Query {
  _env: Env!
}

type Mutation {
  _update_env(params: UpdateEnvInput!): Response!
}
